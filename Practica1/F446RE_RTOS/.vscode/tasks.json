{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build STM32 project",
      "type": "shell",
      "command": "make",
      "args": ["-j8"],
      "options": {
        "cwd": "${workspaceFolder}/Debug"   // donde est√° el Makefile
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "Clean STM32 project",
      "type": "shell",
      "command": "make",
      "args": ["clean"],
      "options": {
        "cwd": "${workspaceFolder}/Debug"
      },
      "group": "build",
      "problemMatcher": "$gcc"
    }
  ]
}